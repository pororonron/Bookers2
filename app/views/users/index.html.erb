<div class="container">
  <div class="row no-gutters mt-3 justify-content-center">
    <div class="col-md-3 col-10">
      <%= render 'info', user: @user %>
      <%= render 'books/new', newBook: @new_book %>
    </div>

    <div class="col-md-8 offset-md-1 col-10">
      <h2>Users</h2>
      <table class="table text-wrap text-break">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= image_tag user.get_profile_image(80, 80) %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to 'Show', user_path(user.id) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>