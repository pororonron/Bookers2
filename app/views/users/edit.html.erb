<div class="container">
  <div class="row no-gutters mt-3">
    <div class="col-md-6 col-md-3 mx-sm-auto mx-2 px-4">
      <h2>User info</h2>

      <% if @user.errors.any? %>
        <ul class="alert p-0" role="alert">
          <h3 class="alert-heading pl-0">
            <%= pluralize(@user.errors.count, 'error') %> prohibited this obj from being saved:
          </h3>
          <% @user.errors.full_messages.each do |message| %>
            <li class="ml-4"><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user, local: true do |f| %>
        <label for="inputName">Name</label>
        <%= f.text_field :name, id: "inputName", class: "form-control mb-3" %>
        <label for="inputImage">Image</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "w-100 mb-3" %>
        <label for="inputIntroduction">Introduction</label>
        <%= f.text_area :introduction, id: "inputIntroduction", class: "form-control mb-3" %>
        <%= f.submit "Update User", class: "btn btn-secondary mb-3" %>
      <% end %>
    </div>
  </div>
</div>