<div class="container">
  <% if @new_book.errors.any? %>
    <ul class="alert p-0 mt-3" role="alert">
      <h3 class="alert-heading pl-0">
        <%= pluralize(@new_book.errors.count, 'error') %> prohibited this obj from being saved:
      </h3>
      <% @new_book.errors.full_messages.each do |message| %>
        <li class="ml-4"><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row no-gutters mt-3 justify-content-center">
    <div class="col-md-3 col-10">
      <%= render 'users/info', user: @user %>
      <%= render 'new', newBook: @new_book %>
    </div>
    <div class="col-md-8 offset-md-1 col-10">
      <%= render 'list', books: @books %>
    </div>
  </div>
</div>
