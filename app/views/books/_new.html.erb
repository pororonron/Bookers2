<h2>New book</h2>

<div>
  <%= form_with model: newBook, local: true do |f| %>
    <label for="inputTitle", class="mb-2">Title</label>
    <%= f.text_field :title, id: "inputTitle", class: "form-control" %>
    <p class="mt-3 mb-2">Opinion</p>
    <%= f.text_area :body, class: "form-control" %>
    <%= f.submit 'Create Book', class: "btn btn-success my-3" %>
  <% end %>
</div>