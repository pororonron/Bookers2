<div class="container">
  <div class="row no-gutters mt-3">
    <div class="col-md-6 col-md-3 mx-sm-auto mx-2 px-4">
      <h1>Editing Book</h1>

      <% if @book.errors.any? %>
        <ul class="alert p-0" role="alert">
          <h3 class="alert-heading pl-0">
            <%= pluralize(@book.errors.count, 'error') %> prohibited this obj from being saved:
          </h3>
          <% @book.errors.full_messages.each do |message| %>
            <li class="ml-4"><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @book, local: true do |f| %>
        <label for="inputTitle">Title</label>
        <%= f.text_field :title, id: "inputTitle", class: "form-control mb-3" %>
        <p class="mb-0 pb-2">Opinion</p>
        <%= f.text_area :body, class: "form-control mb-3" %>
        <%= f.submit "Update Book", class: "btn btn-success mb-3" %>
      <% end %>

      <%= link_to "Show", book_path(@book.id) %>
      <span>|</span>
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
